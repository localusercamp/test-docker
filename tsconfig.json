{
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "allowJs": true,
        "resolveJsonModule": true,
        "jsx": "preserve",
        "allowSyntheticDefaultImports": true,
        "jsxFactory": "h",
        "jsxFragmentFactory": "Fragment",
        "paths": {
            "#root/*": [
                "./*"
            ],
            "#src/*": [
                "./src/*"
            ],
            "#modules/*": [
                "./src/modules/*"
            ],
            "#db/*": [
                "./src/database/*"
            ],
            "#server/*": [
                "./src/server/*"
            ],
            "#framework/*": [
                "./src/framework/*"
            ],
        },
    },
    "include": [
        "./**/*"
    ]
}